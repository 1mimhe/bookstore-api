{
    "openapi": "3.0.1",
    "info": {
      "title": "Tourism-Api",
      "description": "Tourism-App Api documentation.",
      "version": "1.0.0"
    },
    "paths": {
      "/api/auth/registration": {
      "post": {
        "summary": "create a new user.",
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "$ref": "#/components/schemas/UserRegistration"
              }
            },
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserRegistration"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User created successfully."
          }
        }
      }
    }
    },
    "components": {
    "schemas": {
      "UserRegistration": {
        "type": "object",
        "required": [
          "username",
          "firstName",
          "password"
        ],
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "phoneNumber": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        }
      }
    }
  }
}