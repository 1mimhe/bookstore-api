{
  "openapi": "3.0.1",
  "info": {
    "title": "Tourism-Api",
    "description": "Tourism-App Api documentation.",
    "version": "1.0.0"
  },
  "paths": {
    "/api/auth/registration": {
      "post": {
        "summary": "create a new user.",
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "$ref": "#/components/schemas/UserRegistration"
              }
            },
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserRegistration"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User created successfully."
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "login user.",
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "$ref": "#/components/schemas/UserLogin"
              }
            },
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLogin"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User login successfully."
          }
        }
      }
    },
    "/api/auth/refresh-token": {
      "post": {
        "summary": "refresh access token.",
        "tags": [
          "Auth"
        ],
        "responses": {
          "201": {
            "description": "Access Token refreshed successfully."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UserRegistration": {
        "type": "object",
        "required": [
          "username",
          "firstName",
          "password"
        ],
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "phoneNumber": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        }
      },
      "UserLogin": {
        "type": "object",
        "required": [
          "identifier",
          "password"
        ],
        "properties": {
          "identifier": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      }
    }
  }
}